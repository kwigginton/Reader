<h1>Listing posts</h1>

<table>
  <tr>
    <th>Feed</th>
    <th>Title</th>
    <th>Author</th>
    <th>Rank</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% 
	n = 5
	@posts.each do |post| %>
  <tr>
    <td><%= post.feed_id %></td>
    <td><%= strip_tags(post.title).split(/\s+/, n+1)[0...n].join(' ') if !!post.title %></td>

    <td><%= post.author %></td>
    <td><%= post.rank %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
